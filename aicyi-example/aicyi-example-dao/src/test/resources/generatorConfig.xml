<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="generatorConfig.properties" url=""/>

    <context id="MysqlTables" targetRuntime="MyBatis3">

        <!-- 插件 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <!-- 注释 -->
        <commentGenerator type="io.github.aicyi.example.dao.generator.SimpleCommentGenerator">
            <property name="javaFileEncoding" value="UTF-8"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--        <jdbcConnection driverClass="com.mysql.jdbc.Driver"-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test?characterEncoding=utf-8&amp;useSSL=false"
                        userId="root"
                        password="root">
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <javaTypeResolver type="io.github.aicyi.example.dao.generator.MyJavaTypeResolver">
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="io.github.aicyi.example.domain.entity.base"
                            targetProject="${generated.domain.dir}src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="exampleTargetPackage" value="io.github.aicyi.example.domain.example"/>
            <property name="exampleTargetProject" value="${generated.domain.dir}src/main/java"/>
            <property name="rootClass" value="io.github.aicyi.commons.lang.BaseEntity"/>
        </javaModelGenerator>

        <!--&lt;!&ndash; 生成的映射文件包名和位置 &ndash;&gt;-->
        <!--<sqlMapGenerator targetPackage="resources"-->
        <!--targetProject="${generated.mapper.dir}src/main">-->
        <!--<property name="enableSubPackages" value="true"/>-->
        <!--</sqlMapGenerator>-->

        <!-- 生成DAO的包名和位置 -->
        <javaClientGenerator type="ANNOTATEDMAPPER" targetPackage="io.github.aicyi.example.dao.mapper.base"
                             targetProject="${generated.dao.dir}src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="t_user" domainObjectName="User">
            <columnOverride column="birthday"
                            javaType="java.time.LocalDate"></columnOverride>
            <columnOverride column="gender_type"
                            javaType="io.github.aicyi.example.domain.type.GenderType"></columnOverride>
        </table>

        <table tableName="t_student" domainObjectName="Student">
            <columnOverride column="grade_type"
                            javaType="io.github.aicyi.example.domain.type.GradeType"></columnOverride>
        </table>
    </context>
</generatorConfiguration>

















